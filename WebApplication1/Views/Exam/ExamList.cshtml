
@{
    ViewData["Title"] = "ExamList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@model IEnumerable<SoruTest.Entities.Concrete.Exam>

<style>
    /*Table içerigini sığdırmak için kaydırma çubuğu eklendi.*/
    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }
</style>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <div style="float: right;">
                <a href="/Exam/CreateExam" class="btn btn-success"><i class="fa fa-plus">Create Exam</i></a>
            </div>
            <h2>Exam List<small></small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="overflow-x:auto;">
            <table id="datatable-buttons" class="table table-striped table-bordered table-hover table-responsive-sm">
                <thead>
                    <tr>
                        <th>Exam Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Content</td>
                            <td>
                                <a href="#" class="btn btn-danger delete-row" data-id="@item.Id"><i class="fa fa-trash">Delete</i></a>
                                <a href="/Exam/EnterExam/@item.Id" class="btn btn-warning fa fa-pencil">
                                    Enter Exam
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable-datatable-buttons').DataTable();
    });
</script>

<script src="~/scripts/jquery-3.4.1.min.js"></script>
<!----------------------------------------------------------------------------Sınav Silme--------------------------------------------------------->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".delete-row").click(function () {
            //alert("girdi");
            //debugger;
            var id = $(this).attr("data-id");
            var closestTR = $(this).closest("tr");
            bootbox.confirm("Sınavı silmek istediğinizden emin misiniz?", function (result) {
                if (result) {
                    $.ajax({
                        url: '/Exam/DeleteExam/' + id,
                        type: 'POST',
                        success: function (result) {
                            if (result == true) {
                                bootbox.alert("Delete exam");
                                closestTR.fadeOut(1000, function () {
                                    closestTR.remove();
                                });
                            }
                            else bootbox.alert("Error");
                        }

                    });
                }
            });

        });
    });
</script>




